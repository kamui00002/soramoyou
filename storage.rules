rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // NOTE: Firebase Storage rules cannot access Firestore data.
    // Follower access control is handled at the Firestore level.
    // For followers-only content, the app should:
    // 1. Check follower status via Firestore rules when fetching posts
    // 2. Use signed URLs or Cloud Functions for image delivery in Phase 2

    function isImageFile() {
      return request.resource.contentType.matches('image/.*');
    }

    function isValidSize() {
      // Max 5MB
      return request.resource.size < 5 * 1024 * 1024;
    }

    // User profile images
    match /users/{userId}/profile/{imageId} {
      // Only authenticated users can read profile images
      allow read: if isAuthenticated();

      // Only the owner can upload/delete their profile images
      allow write: if isOwner(userId) && isImageFile() && isValidSize();
    }

    // Post images - public
    match /posts/{userId}/public/{imageId} {
      // Anyone can read public images
      allow read: if true;

      // Only authenticated owner can upload public images
      // NOTE: テスト中は条件を緩和（本番前に戻すこと）
      allow write: if isOwner(userId);
    }

    // Post images - followers only
    // NOTE: Storage cannot verify Firestore followers collection.
    // Currently allows authenticated users; actual follower check is done
    // at Firestore level when fetching post metadata.
    // Phase 2: Implement signed URLs via Cloud Functions for proper access control.
    match /posts/{userId}/followers/{imageId} {
      // Authenticated users can read (follower check at Firestore level)
      allow read: if isAuthenticated();

      // Only the owner can upload followers-only images
      allow write: if isOwner(userId) && isImageFile() && isValidSize();
    }

    // Post images - private
    match /posts/{userId}/private/{imageId} {
      // Only the owner can read private images
      allow read: if isOwner(userId);

      // Only the owner can upload private images
      allow write: if isOwner(userId) && isImageFile() && isValidSize();
    }

    // Draft images
    match /drafts/{userId}/{imageId} {
      // Only the owner can read draft images
      allow read: if isOwner(userId);

      // Only the owner can write draft images (with file type and size validation)
      allow create, update: if isOwner(userId) && isImageFile() && isValidSize();

      // Only the owner can delete draft images (no file validation needed for delete)
      allow delete: if isOwner(userId);
    }

    // Thumbnail images - public
    match /thumbnails/{userId}/public/{imageId} {
      // Anyone can read public thumbnails
      allow read: if true;

      // Only authenticated owner can upload public thumbnails
      // NOTE: テスト中は条件を緩和（本番前に戻すこと）
      allow write: if isOwner(userId);
    }

    // Thumbnail images - followers only
    // NOTE: Same limitation as posts - follower check at Firestore level
    match /thumbnails/{userId}/followers/{imageId} {
      // Authenticated users can read (follower check at Firestore level)
      allow read: if isAuthenticated();

      // Only the owner can upload followers-only thumbnails
      allow write: if isOwner(userId) && isImageFile() && isValidSize();
    }

    // Thumbnail images - private
    match /thumbnails/{userId}/private/{imageId} {
      // Only the owner can read private thumbnails
      allow read: if isOwner(userId);

      // Only the owner can upload private thumbnails
      allow write: if isOwner(userId) && isImageFile() && isValidSize();
    }

    // Original images (unedited) - public
    match /originals/{userId}/public/{imageId} {
      // Anyone can read public original images
      allow read: if true;

      // Only authenticated owner can upload public original images
      // NOTE: テスト中は条件を緩和（本番前に戻すこと）
      allow write: if isOwner(userId);
    }

    // Original images (unedited) - followers only
    // NOTE: Same limitation as posts - follower check at Firestore level
    match /originals/{userId}/followers/{imageId} {
      // Authenticated users can read (follower check at Firestore level)
      allow read: if isAuthenticated();

      // Only the owner can upload followers-only original images
      allow write: if isOwner(userId) && isImageFile() && isValidSize();
    }

    // Original images (unedited) - private
    match /originals/{userId}/private/{imageId} {
      // Only the owner can read private original images
      allow read: if isOwner(userId);

      // Only the owner can upload private original images
      allow write: if isOwner(userId) && isImageFile() && isValidSize();
    }
  }
}
