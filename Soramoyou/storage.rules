rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Posts images (公開画像)
    // パス形式: posts/{userId}/{imageId}.jpg
    match /posts/{userId}/{imageId} {
      // 読み取り: 全員読み取り可能（公開投稿の画像）
      allow read: if true;
      
      // アップロード: 認証済みユーザーが自分の投稿画像をアップロード
      allow write: if isOwner(userId) &&
                      request.resource.size < 5 * 1024 * 1024 && // 5MB以下
                      request.resource.contentType.matches('image/.*');
      
      // 削除: 自分の投稿画像のみ削除可能
      allow delete: if isOwner(userId);
    }
    
    // Thumbnails (公開画像のサムネイル)
    // パス形式: thumbnails/{userId}/{imageId}.jpg
    match /thumbnails/{userId}/{imageId} {
      // 読み取り: 全員読み取り可能（公開投稿のサムネイル）
      allow read: if true;
      
      // アップロード: 認証済みユーザーが自分のサムネイルをアップロード
      allow write: if isOwner(userId) &&
                      request.resource.size < 1 * 1024 * 1024 && // 1MB以下（サムネイル）
                      request.resource.contentType.matches('image/.*');
      
      // 削除: 自分のサムネイルのみ削除可能
      allow delete: if isOwner(userId);
    }
    
    // User profile images (プライベート画像)
    // パス形式: users/{userId}/profile.jpg
    match /users/{userId}/profile.jpg {
      // 読み取り: 全員読み取り可能（プロフィール画像は公開）
      allow read: if true;
      
      // アップロード: 認証済みユーザーが自分のプロフィール画像をアップロード
      allow write: if isOwner(userId) &&
                      request.resource.size < 5 * 1024 * 1024 && // 5MB以下
                      request.resource.contentType.matches('image/.*');
      
      // 削除: 自分のプロフィール画像のみ削除可能
      allow delete: if isOwner(userId);
    }
    
    // その他のパス（将来の拡張用）
    match /{allPaths=**} {
      // デフォルト: すべてのアクセスを拒否（明示的に許可されていないパスは拒否）
      allow read, write: if false;
    }
  }
}


