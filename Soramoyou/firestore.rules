rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isPublicPost() {
      return resource.data.visibility == 'public';
    }
    
    function isOwnPost() {
      return isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    function isFollowersPost() {
      // Note: フォロワー機能はPhase 2で実装予定のため、現在は自分の投稿のみ閲覧可能
      return resource.data.visibility == 'followers' && isOwnPost();
    }
    
    function isPrivatePost() {
      return resource.data.visibility == 'private' && isOwnPost();
    }
    
    // Users collection
    match /users/{userId} {
      // 読み取り: 認証済みユーザーのみ
      allow read: if isAuthenticated();
      
      // 作成: 認証済みユーザーが自分のデータを作成
      allow create: if isAuthenticated() && 
                       request.auth.uid == userId &&
                       request.resource.data.userId == userId;
      
      // 更新・削除: 自分のデータのみ
      allow update, delete: if isOwner(userId);
    }
    
    // Posts collection
    match /posts/{postId} {
      // 読み取り: 
      // - 公開投稿は全員読み取り可能（認証不要）
      // - フォロワー投稿は自分の投稿のみ（Phase 2でフォロワー機能実装後に対応）
      // - 非公開投稿は自分の投稿のみ
      // - 自分の投稿は常に読み取り可能
      allow read: if isPublicPost() || 
                     isOwnPost() || 
                     isFollowersPost() || 
                     isPrivatePost();
      
      // 作成: 認証済みユーザーが自分の投稿を作成
      allow create: if isAuthenticated() && 
                       request.auth.uid == request.resource.data.userId &&
                       request.resource.data.visibility in ['public', 'followers', 'private'];
      
      // 更新: 自分の投稿のみ更新可能
      allow update: if isOwnPost() &&
                       // userIdの変更を防ぐ
                       request.resource.data.userId == resource.data.userId;
      
      // 削除: 自分の投稿のみ削除可能
      allow delete: if isOwnPost();
    }
    
    // Drafts collection
    match /drafts/{draftId} {
      // 読み取り: 自分の下書きのみ
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      
      // 作成: 認証済みユーザーが自分の下書きを作成
      allow create: if isAuthenticated() && 
                       request.auth.uid == request.resource.data.userId &&
                       request.resource.data.draftId == draftId;
      
      // 更新: 自分の下書きのみ更新可能
      allow update: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid &&
                       // userIdの変更を防ぐ
                       request.resource.data.userId == resource.data.userId &&
                       request.resource.data.draftId == draftId;
      
      // 削除: 自分の下書きのみ削除可能
      allow delete: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid;
    }
  }
}


